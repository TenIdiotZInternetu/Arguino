{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Debug (gdb Attach)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/core/build/executable/arguino",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "args": [
                "${input:Mode}",
                "${input:shmem_Name}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "Mode",
            "type": "pickString",
            "description": "Choose mode in which to launch the program",
            "options": [
                "--single-process",
                "--only-simulator",
                "--start_tcp",
                "--only-tcp"
            ]
        },
        {
            "id": "shmem_Name",
            "type": "promptString",
            "description": "Enter name of the shared memory region"
        }
    ]
}